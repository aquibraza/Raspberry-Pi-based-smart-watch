<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aquib.smartwatch.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/menuList"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529">

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/locationFind"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/location" />

                <Button
                    android:id="@+id/tempPulseDisplay"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/thermo" />

                <Button
                    android:id="@+id/messageSend"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/messages" />

                <Button
                    android:id="@+id/buzzerRing"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:onClick="buzzerRing"
                    android:background="@drawable/buzzer" />

                <Button
                    android:id="@+id/settingsAdjust"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/settings" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="88dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/raspberrylogo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="256dp"
        android:layout_height="248dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/parentprotectlogo" />

</android.support.constraint.ConstraintLayout>
